rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to get user data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Helper function to check user role
    function hasRole(role) {
      return isAuthenticated() && getUserData().role == role;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return hasRole('admin');
    }

    // Helper function to check if user is writer
    function isWriter() {
      return hasRole('writer');
    }

    // Helper function to check if user is translator
    function isTranslator() {
      return hasRole('translator');
    }

    // Helper function to check if user can write to any collection
    function canWriteAnywhere() {
      return isAdmin() || isWriter();
    }

    // Helper function to check if user can read
    function canRead() {
      return isAuthenticated(); // All authenticated users can read
    }

    // Users collection - for storing user roles
    match /users/{userId} {
      // All authenticated users can read user profiles
      allow read: if isAuthenticated();

      // Users can create their own profile
      allow create: if isAuthenticated() && request.auth.uid == userId;

      // Users can update their own profile (but not their role)
      allow update: if isAuthenticated() &&
                      request.auth.uid == userId &&
                      request.resource.data.role == resource.data.role;

      // Only admins can update roles or delete users
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Strings collection - can be edited by writers, translators, and admins
    match /strings/{stringId} {
      // All authenticated users can read
      allow read: if canRead();

      // Writers, translators, and admins can write
      allow create, update: if isWriter() || isTranslator() || isAdmin();

      // Only admins can delete
      allow delete: if isAdmin();
    }

    // All other collections - only writers and admins can edit
    match /{collection}/{document=**} {
      // All authenticated users can read
      allow read: if canRead();

      // Only writers and admins can write
      allow create, update: if canWriteAnywhere();

      // Only admins can delete
      allow delete: if isAdmin();
    }
  }
}
